# MIT Schedule Advisor - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# OpenAI Configuration
# ============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Model selection
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# ============================================================================
# MIT APIs
# ============================================================================
# Request access from MIT's API portal
MIT_COURSES_API_KEY=
MIT_CATALOG_API_KEY=

# API URLs (defaults should work)
MIT_COURSES_API_URL=https://mit-courses-v1.cloudhub.io/courses/v1
MIT_CATALOG_API_URL=https://mit-course-catalog-v2.cloudhub.io/coursecatalog/v2

# ============================================================================
# ChromaDB Configuration
# ============================================================================
# If running locally with Docker: docker run -p 8000:8000 chromadb/chroma
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Collection names
CHROMA_COLLECTION_COURSES=mit_courses
CHROMA_COLLECTION_REQUIREMENTS=mit_requirements
CHROMA_COLLECTION_KNOWLEDGE=mit_knowledge

# ============================================================================
# Redis Configuration
# ============================================================================
# If running locally with Docker: docker run -p 6379:6379 redis
REDIS_URL=redis://localhost:6379

# Cache TTL in seconds (default: 24 hours)
REDIS_CACHE_TTL=86400

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=MIT Schedule Advisor
APP_VERSION=0.1.0
DEBUG=True

# ============================================================================
# RAG Settings
# ============================================================================
# Number of documents to retrieve
RAG_TOP_K=5

# Minimum similarity score (0-1)
RAG_SIMILARITY_THRESHOLD=0.7

# Enable result reranking
RAG_RERANK=True

# ============================================================================
# Solver Settings
# ============================================================================
# Maximum solving time in seconds
SOLVER_TIMEOUT_SECONDS=30

# Number of terms to plan (4 years = 8 terms)
SOLVER_MAX_TERMS=8

# Default unit limits per term
DEFAULT_MAX_UNITS_PER_TERM=60
DEFAULT_MIN_UNITS_PER_TERM=36

# ============================================================================
# Web Scraping
# ============================================================================
SCRAPER_USER_AGENT=MIT-Schedule-Advisor/0.1.0
SCRAPER_DELAY_SECONDS=1.0

# ============================================================================
# CORS Configuration
# ============================================================================
# Add your frontend URLs here
# CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://your-app.lovable.app"]
